import numpy as np
from Firefly import firefly_algorithm
# Define the benchmark function to be optimized
def sphere(x):
    return np.sum(x ** 2)

# Define the search space and dimension
lb = np.array([-5.12, -5.12])
ub = np.array([5.12, 5.12])
dim = 2

# Define the optimal value
optimal_value = 0.0

# Define the number of fireflies and maximum iteration
n_fireflies = 20
max_iter = 100

# Run the Firefly Algorithm
best_solution, best_fitness = firefly_algorithm(sphere, lb, ub, dim, n_fireflies, max_iter, optimal_value)

# Print the result
print("Best Solution:", best_solution)
print("Best Fitness:", best_fitness)
